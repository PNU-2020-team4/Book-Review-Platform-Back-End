<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.team4.bookreview.reviewMapper">
 
    <select id="selectAll" resultType="ReviewVO">
        SELECT *
        FROM review
    </select>
    
    <select id="selectByWriter" parameterType="int" resultType="ReviewVO">
    	SELECT *
    	FROM review
    	WHERE writer = #{writer}
    </select>
    
    <insert id="insert" parameterType = "ReviewVO">
    	INSERT INTO review( writer, content, star, book, date)
    	VALUE (#{writer}, #{content}, #{star}, #{book}, #{date})
    </insert>
    
    <delete id="delete" parameterType = "int">
    	DELETE 
    	FROM review
    	WHERE idx = #{idx}
    </delete>

	<update id = "update" parameterType = "ReviewVO">
		UPDATE review SET 
		content = #{content}, star = #{star}, date = #{date}
		WHERE idx = #{idx}
	</update>
     
</mapper>
